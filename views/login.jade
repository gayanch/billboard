doctype html
html
	head
		title Login
		link(rel='stylesheet', href='/materialize/css/materialize.min.css')
		link(rel='stylesheet' href='/font-awesome/css/font-awesome.min.css')

	body
		div(class='container' style='margin-top: 8px;')
			nav
				div(class="nav-wrapper")
					a(href='#' class="brand-logo") &nbsp;Login

		div(class='container' style='margin-top: 36px;')
			div(class='row')
				div(class='col s4 offset-s4')
					form(action='/login' method='post' target='feedback')
						div(class='input-field')
							input(class='validate' type='text' id='username' name='username' required='true')
							label(class='active' for='username' style='left: 0;') Username
						div(class='input-field')
							input(class='validate' type='password' id='password' name='password' required='true')
							label(class='active' for='password' style='left: 0;') Password
						div(class='input-field')
							input(type='submit' value='Login' class='btn' id='login')
					p
						iframe(name='feedback' style='border: 0;')


		script(type='text/javascript' src='/javascripts/jquery.min.js')
		script(src='/materialize/js/materialize.min.js')
